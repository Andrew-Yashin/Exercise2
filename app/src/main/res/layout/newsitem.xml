<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/standartindent">

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAllCaps="true"
            android:textSize="@dimen/textsize"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/category"
            android:layout_toLeftOf="@id/headingimage"
            android:textSize="@dimen/textsize"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/title"
            android:layout_toLeftOf="@id/headingimage"
            android:textSize="@dimen/textsize14"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/preview"
            android:layout_marginTop="@dimen/halfofstandart"
            android:textColor="@color/greycolor"
            android:textSize="@dimen/textsize12" />

        <ImageView
            android:id="@+id/headingimage"
            android:layout_width="@dimen/imagesize100"
            android:layout_height="@dimen/imagesize100"
            android:layout_above="@id/date"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/category"
            android:layout_marginStart="@dimen/halfofstandart"
            android:adjustViewBounds="true"
            android:scaleType="center" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

